{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "#config/*": ["config/*"],
      "#controllers/*": ["controllers/*"],
      "#models/*": ["models/*"],
      "#routes/*": ["routes/*"],
      "#middleware/*": ["middleware/*"],
      "#utils/*": ["utils/*"],
      "#jobs/*": ["jobs/*"]
    }
  },
  "include": ["src", "testSupabase.ts"],
  "exclude": ["node_modules"]
}
